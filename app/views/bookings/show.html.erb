<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <h2>Booking enquiry completed</h2>
      <p>Start Date: <%= @booking.start_date %></p>
      <p>End Date: <%= @booking.end_date %></p>
      <p>User: <%= @booking.item.user_id %></p>
      <p>Title: <%= @booking.item.title %></p>
      <p>Description: <%= @booking.item.description %></p>
      <p>Price per day: £<%= @booking.item.price %></p>
      <p>Delivery Fee: £40 </p>
      <% price = (@booking.end_date - @booking.start_date).to_i * @booking.item.price + 40 %>
      <p>Total Price: £<%= price %></p>
    </div>
  </div>

  <% if current_user == @booking.user %>
    <%= link_to "Edit Booking", edit_item_booking_path(@booking.item, @booking) %>
    <%= link_to "Cancel Booking", booking_path(@booking), method: :delete, data: {confirm: "Are you sure you want to cancel this booking?"} %>
  <% end %>
  <%= link_to "All my bookings", bookings_path %>
</div>

