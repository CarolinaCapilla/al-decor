<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 mt-3">
      <h2 class="size-link">Booking enquiry completed</h2>
      <p><strong>Start Date: </strong><%= @booking.start_date.strftime('%d %B %Y') %></p>
      <p><strong>End Date: </strong><%= @booking.end_date.strftime('%d %B %Y') %></p>
      <p><strong>Title: </strong><%= @booking.item.title %></p>
      <p><strong>Description: </strong><%= @booking.item.description %></p>
      <p><strong>Price per day: </strong> £<%= @booking.item.price %></p>
      <p><strong>Delivery Fee: </strong> £40 </p>
      <% price = (@booking.end_date - @booking.start_date).to_i * @booking.item.price + 40 %>
      <p><strong>Total Price: </strong> £<%= price %></p>
    </div>
    <div class="col-6 mt-3">
      <%= cl_image_tag @booking.item.photo.key, height: 400, width: 500, crop: :fill %>
    </div>
  </div>
  <% if current_user == @booking.user %>
    <%= link_to "Edit Booking", edit_item_booking_path(@booking.item, @booking) %> |
    <%= link_to "Cancel Booking", booking_path(@booking), method: :delete, data: {confirm: "Are you sure you want to cancel this booking?"} %> |
  <% end %>
  <%= link_to "All my bookings", bookings_path %> 
</div>


