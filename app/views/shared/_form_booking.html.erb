<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <%= simple_form_for [@item, @booking] do |f| %>
        <%= f.input :start_date, as: :string,  input_html: {class: "datepicker"} %>
        <%= f.input :end_date, as: :string, input_html: {class: "datepicker"} %>
        <%= f.input :message %>
        <%= f.button :submit, class: "btn-ghost btn-ghost:hover my-2 paragraph-70" %>
      <% end %>
    </div>
  </div>
</div>
