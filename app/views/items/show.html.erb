<div class="section">
  <div class="layout-grid product-grid">
    <div id="product-node" class="product-content-wrap"><a href="#" class="size-link"><%= @item.title %></a>
      <div class="paragraph">Â£<%= @item.price %></div>
      <div class="product-product-info-wrap">
        <div class="paragraph-70"><%= @item.description %></div>
      </div>
    </div>
    <div class="product-deco-text">Category / <%= @item.category %></div>
    <div id="product-node-2" class="product-image">
      <%= cl_image_tag @item.photo.key,crop: :fill %>
    </div>

    <ul class="list-group">
      <% @item.reviews.each do |review| %>
        <li class="list-group-item"><%= review.content %></li>
      <% end %>
    </ul>

    <li class="list-group-item">
      <%= review.content %>
      <%= link_to "Remove",
                  review_path(review),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    </li>

    <%= link_to "Book", new_item_booking_path(@item) %>
    <%= link_to "Edit", edit_item_path(@item) %>
    <%= link_to "Delete", item_path(@item), method: :delete, data: {confirm:"Are you sure you want to delete this item?"} %>
    <%= link_to "Full list", items_path %>
    <%= link_to 'Leave a review', new_item_review_path(@item) %>
  </div>
</div>
