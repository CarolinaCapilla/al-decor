<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <%= simple_form_for @item do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :category, collection: ["Paintings", "Abstract", "Print", "Photo", "Drawings", "Decorative"] %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>